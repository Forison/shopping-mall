<%= provide(:title, "post content")%>
<div class="container">
<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3  col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 signup_wrap">
<h1 class="text-center signup">Signup</h1>
<%= form_for(@post , url: posts_new_path ) do |f| %>
 <%= render "partials/error_messages" %>
 <%= f.label :author %>
  <%= f.text_field :author, class: 'form-control' %>

 <%= f.label :headline %>
 <%= f.text_field :headline ,class: "form-control" %>
 
 <%= f.label :content %>
 <%= f.text_field :content,  class: "form-control" %>

 <%= f.submit "post" , class: "btn btn-primary" %>

<% end %>

</div>
</div>