<%= provide(:title, "home")%>
<div class="space"></div>
<% @posts.each do |posting|%>
<div class="container home-wrap">
<div class="row">
<div class="col-12 col-sm-2 col-md-3 col-lg-2"></div>
  <div class="col-12 col-sm-8 col-md-6 col-lg-8 card">
  <div class="card-header"><h1 class="text-center">author:<%= posting.author if logged_in? %></h1></div>
  <div class="card-body">
   <p class="text-center"><%= posting.content %><p>
     </div> 
  <div class="card-footer"><h1 class="text-center">headline:<%= posting.headline %></h1></div>
  </div>

<div class="col-12 col-sm-2 col-md-3 col-lg-2"></div>
</div>
</div>
<div class="clear_fix"></div>

<% end %>


<!-- Trigger the modal with a button -->
<button type="button" class=" tilted btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">post</button>

<% if logged_in?%>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Post your article</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@post , url: posts_new_path) do |f| %>
    
        <%= f.label :author %>
        <%= f.text_field :author, class: 'form-control' %>

        <%= f.label :headline %>
        <%= f.text_field :headline ,class: "form-control" %>
 
        <%= f.label :content %>
        <%= f.text_area :content,  class: "form-control" %>
        <%= f.submit "Upload Article" ,class: "btn btn-info" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
<%else%>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Post your article</h4>
      </div>
      <div class="modal-body">
        <p><%= link_to "log" , sessions_new_path %> in to post an article<p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
<%end%>