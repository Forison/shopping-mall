<%= provide(:title, "login") %>
<div class="space"></div>
<div class="container ">
  <div
    class="shaddow col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3  col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 signup_wrap">
    <h1 class="text-center signup">Signup</h1>
    <%= form_for(:session , url: sessions_new_path ) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email ,class: "form-control" %>

    <%= f.label :password %>
    <%= f.password_field :password,  class: "form-control" %>

    <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span>Remember me on this computer</span>
    <% end %>

    <%= f.submit "Login" , class: "btn btn-primary" %>
    <p class="note">don't yet have an account ? <%= link_to "sign up" , users_new_path %> </p>
    <% end %>

  </div>
</div>